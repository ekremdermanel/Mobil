<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- AppBar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar_gradient"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Ürün Detayı"
        app:titleTextColor="#FFFFFF"
        app:menu="@menu/product_detail_menu" />

    <!-- İçerik: Scrollable -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Görsel Carousel Placeholder (koda ViewPager2 bağla) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardImage"
                android:layout_width="0dp"
                android:layout_height="300dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Öneri: buraya ViewPager2/RecyclerView koyun. Aşağıya placeholder ImageView -->
                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/product_sample" />
            </androidx.cardview.widget.CardView>

            <!-- Küçük görsel gösterge (position dots) -->
            <LinearLayout
                android:id="@+id/dotsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/cardImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Başlık -->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Şık Spor Ayakkabı Model X"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/dotsContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Fiyat, eski fiyat, indirim badge ve rating -->
            <LinearLayout
                android:id="@+id/priceRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/txtTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₺ 499,90"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#E91E63"/>

                <TextView
                    android:id="@+id/txtOldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₺ 699,90"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:textColor="#9E9E9E"
                    android:paintFlags="strikeThruText"/>

                <TextView
                    android:id="@+id/badgeDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%28 İNDİRİM"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:padding="6dp"
                    android:background="@drawable/badge_red"
                    android:textColor="#FFFFFF"/>

                <!-- Sağda rating -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end|center_vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_star_filled"
                        android:contentDescription="puan"/>
                    <TextView
                        android:id="@+id/txtRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.6"
                        android:layout_marginStart="4dp"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Renk Seçenekleri (Chip benzeri) -->
            <TextView
                android:id="@+id/txtColorTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Renk"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/priceRow"
                app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                android:id="@+id/colorOptions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="start"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtColorTitle">

                <!-- Renk yuvarlaklarını code ile dynamic oluşturabilirsiniz -->
                <View
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/color_circle_black"
                    android:layout_marginEnd="8dp" />

                <View
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/color_circle_white"
                    android:layout_marginEnd="8dp" />

                <View
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/color_circle_blue"
                    android:layout_marginEnd="8dp" />
            </LinearLayout>

            <!-- Beden Seçenekleri (Chip Group benzeri) -->
            <TextView
                android:id="@+id/txtSizeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beden"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/colorOptions"
                app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                android:id="@+id/sizeOptions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/txtSizeTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    style="@style/SelectableChip"
                    android:text="39" />

                <TextView
                    style="@style/SelectableChip"
                    android:text="40" />

                <TextView
                    style="@style/SelectableChip"
                    android:text="41" />

                <TextView
                    style="@style/SelectableChip"
                    android:text="42" />
            </LinearLayout>

            <!-- Miktar seçici -->
            <LinearLayout
                android:id="@+id/qtyRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/sizeOptions"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Miktar"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/qty_background"
                    android:padding="4dp"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/btnMinus"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_minus"
                        android:background="@null"
                        android:contentDescription="eksilt"/>

                    <TextView
                        android:id="@+id/txtQty"
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1"
                        android:textStyle="bold"/>

                    <ImageButton
                        android:id="@+id/btnPlus"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_plus"
                        android:background="@null"
                        android:contentDescription="arttır"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Sepete Ekle / Hemen Al - geniş butonlar -->
            <LinearLayout
                android:id="@+id/actionRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@id/qtyRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <Button
                    android:id="@+id/btnAddToCart"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Sepete Ekle"
                    android:backgroundTint="#FF9800"
                    android:textColor="#FFFFFF"
                    android:drawableLeft="@drawable/ic_shopping_cart"
                    android:paddingStart="12dp"/>

                <Button
                    android:id="@+id/btnBuyNow"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Hemen Satın Al"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/btn_gradient_primary"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <!-- Kısa özellikler (icon + text) -->
            <LinearLayout
                android:id="@+id/featuresRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@id/actionRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_shipping"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ücretsiz Kargo" android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_return"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="14 Gün İade" android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_secure"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Güvenli Ödeme" android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Açıklama başlığı -->
            <TextView
                android:id="@+id/txtDescTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ürün Açıklaması"
                android:textStyle="bold"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@id/featuresRow"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Açıklama (expandable olabilir) -->
            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Bu spor ayakkabı rahat, hafif ve gündelik kullanım için tasarlandı. Üst malzeme nefes alır, taban darbe emici yapıdadır. Günlük kullanım, yürüyüş ve hafif sporlar için uygundur."
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/txtDescTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Yorumlar başlığı -->
            <TextView
                android:id="@+id/txtReviewsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kullanıcı Yorumları"
                android:textStyle="bold"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@id/txtDescription"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Yorum örnek Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/reviewCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/txtReviewsTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_user_circle"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ayşe K." android:textStyle="bold"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2 gün önce" android:textSize="12sp" android:textColor="#9E9E9E"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end"
                            android:layout_weight="1">
                            <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_star_filled"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5" android:layout_marginStart="4dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Çok rahat ve hafif. Gün boyu kullanıyorum, ayaklarım ağrımadı. Tavsiye ederim."
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Benzer ürünler yatay liste (RecyclerView ile bağlayın) -->
            <TextView
                android:id="@+id/txtSimilarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Benzer Ürünler"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/reviewCard"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSimilar"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/txtSimilarTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Alt boşluk -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"
                app:layout_constraintTop_toBottomOf="@id/rvSimilar"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Floating actions: Favori ve Sepet (üstte sağ) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabWishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_heart_outline"
        app:layout_anchor="@id/topAppBar"
        app:layout_anchorGravity="end|top"
        android:layout_margin="16dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_shopping_bag"
        app:layout_anchor="@id/topAppBar"
        app:layout_anchorGravity="end|top"
        android:layout_margin="16dp"
        android:layout_marginEnd="88dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
