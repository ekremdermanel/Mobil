<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:padding="16dp">

            <!-- Görsel Carousel Placeholder (koda ViewPager2 bağla) -->

            <androidx.cardview.widget.CardView
                android:id="@+id/cardImage"
                android:layout_width="0dp"
                android:layout_height="300dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Öneri: buraya ViewPager2/RecyclerView koyun. Aşağıya placeholder ImageView -->
                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ornek_urun" />

            </androidx.cardview.widget.CardView>

            <!-- Küçük görsel gösterge (position dots) -->

            <!-- Başlık -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Şık Spor Ayakkabı Model X"
        android:textColor="#212121"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardImage" />

            <!-- Fiyat, eski fiyat, indirim badge ve rating -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_kalp"
        app:backgroundTint="#E91E63"
        app:iconTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/cardImage"
        app:layout_constraintEnd_toEndOf="@+id/cardImage"
        app:layout_constraintTop_toBottomOf="@+id/cardImage" />


    <LinearLayout
        android:id="@+id/priceRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTitle">

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₺ 499,90"
            android:textColor="#E91E63"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtOldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="₺ 699,90"
            android:textColor="#9E9E9E"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/badgeDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/yuvarlak_kenar_dortgen"
            android:backgroundTint="#E91E63"
            android:padding="6dp"
            android:text="%28 İNDİRİM"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <!-- Sağda rating -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:contentDescription="puan"
                android:src="@drawable/ic_yildiz" />

            <TextView
                android:id="@+id/txtRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="4.6"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

            <!-- Renk Seçenekleri (Chip benzeri) -->
    <TextView
        android:id="@+id/txtColorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Renk"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/priceRow" />

            <LinearLayout
                android:id="@+id/colorOptions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="start"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtColorTitle">

                <!-- Renk yuvarlaklarını code ile dynamic oluşturabilirsiniz -->
                <View
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/yuvarlak"
                    android:backgroundTint="#B51414"
                    android:layout_marginEnd="8dp" />

                <View
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/yuvarlak"
                    android:backgroundTint="#14B0B5"
                    android:layout_marginEnd="8dp" />

                <View
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/yuvarlak"
                    android:backgroundTint="#4CAF50"
                    android:layout_marginEnd="8dp" />
            </LinearLayout>

            <!-- Beden Seçenekleri (Chip Group benzeri) -->

            <!-- Miktar seçici -->

            <!-- Sepete Ekle / Hemen Al - geniş butonlar -->
            <LinearLayout
                android:id="@+id/actionRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:id="@+id/btnAddToCart"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9800"
                    android:drawableLeft="@drawable/ic_sepet"
                    android:paddingStart="12dp"
                    android:text="Sepete Ekle"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

