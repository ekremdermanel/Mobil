<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101C1B"
    android:id="@+id/main">

    <!-- Profil Fotoğrafı -->
    <ImageView
        android:id="@+id/resim"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/elon_musk" />

    <!-- İsim -->
    <TextView
        android:id="@+id/isim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Elon Musk"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resim" />

    <!-- Arama Süresi -->
    <TextView
        android:id="@+id/sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:53"
        android:textColor="#B0B0B0"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/isim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Alt butonlar (sadece ikonlar) -->
    <LinearLayout
        android:id="@+id/dugmeler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@id/kapat">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/yuvarlak"
            android:padding="12dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/ic_tus_takimi" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/yuvarlak"
            android:padding="12dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/ic_mikrofon_kapat" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/yuvarlak"
            android:padding="12dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/ic_hoparlor" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/yuvarlak"
            android:padding="12dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/ic_daha_fazla" />

    </LinearLayout>

    <!-- Çağrı Bitir -->
    <ImageView
        android:id="@+id/kapat"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/yuvarlak"
        android:backgroundTint="#780000"
        android:padding="16dp"
        android:src="@drawable/ic_cagri_bitir"
        android:tintMode="src_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
